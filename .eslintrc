{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "comma-dangle": [1, "never"],
    "func-names": 2,
    "prefer-arrow-callback": 2,
    "space-before-function-paren": [2, "never"],
    "no-else-return": 0,
    "no-multi-spaces": 0,
    "quotes": [2, "single"],
    "jsx-quotes": [2, "prefer-double"],
    "one-var": 0,
    "no-console": 0,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }]
  }
}
